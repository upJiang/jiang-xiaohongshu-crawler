{
  "name": "jiang-xiaohongshu-crawler",
  "private": true,
  "version": "1.0.0",
  "main": "nw-main.html",
  "window": {
    "icon": "public/vite.svg",
    "title": "小红书爬虫",
    "width": 1200,
    "height": 768,
    "min_width": 800,
    "min_height": 600,
    "position": "center",
    "toolbar": true,
    "frame": true,
    "show_in_taskbar": true,
    "show": true,
    "kiosk": false,
    "transparent": false,
    "resizable": true,
    "chromium-args": "--disable-gpu --disable-software-rasterizer --ignore-certificate-errors"
  },
  "webkit": {
    "plugin": true,
    "java": false,
    "page-cache": false
  },
  "js-flags": "--expose-gc",
  "node-remote": [
    "<all_urls>"
  ],
  "chromium-args": "--disable-gpu --disable-software-rasterizer --ignore-certificate-errors",
  "scripts": {
    "start": "node crawler.js",
    "dev": "concurrently \"node server/index.js\" \"vite\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "lint-staged",
    "tsc": "vue-tsc --noEmit --skipLibCheck",
    "prepare": "husky install",
    "server": "node server/index.js",
    "nw:dev": "concurrently \"vite\" \"nw .\"",
    "nw:build-win": "node ./winBuild.mjs",
    "build-mac": "node ./macBuild.mjs"
  },
  "dependencies": {
    "ant-design-vue": "^4.0.7",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "openai": "^4.85.1",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "puppeteer": "^22.0.0",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.18.1",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "lint-staged": "^15.1.0",
    "mockjs": "^1.1.0",
    "nprogress": "^0.2.0",
    "nw": "^0.96.0",
    "nw-builder": "^4.13.8",
    "prettier": "^2.7.1",
    "stylelint": "^13.2.1",
    "stylelint-config-clean-order": "^2.1.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^5.2.2",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^5.0.0",
    "vite-plugin-mock": "2.9.6",
    "vue-tsc": "^1.8.22",
    "yarn": "^1.22.21"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less,scss}": "stylelint --fix"
  }
}
